# ====================
# REQUIRED: Clerk Authentication
# ====================
# Get these from: https://dashboard.clerk.com/
# CRITICAL: App will NOT work without these keys
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# ====================
# REQUIRED: Database (PostgreSQL)
# ====================
# Connection string for your PostgreSQL database
# Example: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/database

# Optional: Individual PostgreSQL connection params
PGDATABASE=your_database_name
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password

# ====================
# REQUIRED: Session Secret
# ====================
# Generate a random secret for session encryption
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
SESSION_SECRET=your_random_session_secret_here

# ====================
# OPTIONAL: Payment Processing (Stripe)
# ====================
# Get these from: https://dashboard.stripe.com/
# Only needed if you're using payment features
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_TEST_API_KEY=sk_test_your_stripe_test_key
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# ====================
# OPTIONAL: Email Service (SendGrid)
# ====================
# Get from: https://app.sendgrid.com/
# Only needed if you're sending emails
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# ====================
# OPTIONAL: AI Services
# ====================
# OpenAI API key for AI features (content moderation, etc.)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key

# ====================
# OPTIONAL: File Storage (Supabase)
# ====================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
# Only needed for file uploads (profile images, documents)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ====================
# Environment
# ====================
# Set to 'development' for local dev, 'production' for deployed environments
NODE_ENV=development
